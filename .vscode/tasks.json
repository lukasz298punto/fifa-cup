    "version": "2.0.0",
    "tasks": [
        {
            "group": "build",
            "label": "Runs the app in the development mode",
            "type": "shell",
            "command": "yarn start",
            "problemMatcher": []
        },
        {
            "group": "build",
            "label": "Builds the app for production to the build folder",
            "type": "shell",
            "command": "yarn build",
            "problemMatcher": []
        },
        {
            "group": "build",
            "label": "Format all files in src with Prettier",
            "type": "shell",
            "command": "yarn prettier --write src/",
            "problemMatcher": []
        },
        {
            "label": "GraphQL generate (docker-compose)",
            "type": "shell",
            "command": "docker-compose exec node yarn generate",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }        
    ]
}
